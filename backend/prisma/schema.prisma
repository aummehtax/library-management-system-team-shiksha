generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String           @id @default(uuid())
  email         String           @unique
  username      String           @unique
  password      String
  firstName     String
  lastName      String
  role          UserRole         @default(USER)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  groupMember   GroupMember[]
  borrow        Borrowing[]
}

model GroupMember {
  id            String           @id @default(uuid())
  userId        String
  groupId       String
  user          User             @relation(fields: [userId], references: [id])
  group         Group            @relation(fields: [groupId], references: [id])
  joinedAt      DateTime         @default(now())

  @@unique([userId, groupId])
}

model Group {
  id            String           @id @default(uuid())
  name          String
  members       GroupMember[]
  createdAt     DateTime         @default(now())
  borrow        Borrowing[]
}

model Book {
  id              String         @id @default(uuid())
  isbn            String         @unique
  title           String
  author          String?
  price           Float
  categoryId      String
  category        Category       @relation(fields: [categoryId], references: [id])
  totalCopies     Int            @default(3)
  availableCopies Int            @default(3)
  condition       String         @default("good")
  createdAt       DateTime       @default(now())
  borrowings      Borrowing[]
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  books     Book[]
}

enum UserRole {
  USER
  ADMIN
}

model Borrowing {
  id              String          @id @default(uuid())
  bookId          String
  userId          String?  
  groupId         String?  
  borrowDate      DateTime        @default(now())
  dueDate         DateTime
  returnDate      DateTime?
  isReturned      Boolean         @default(false)
  damageLevel     DamageLevel? 
  book            Book            @relation(fields: [bookId], references: [id])
  user            User?           @relation(fields: [userId], references: [id])
  group           Group?          @relation(fields: [groupId], references: [id])
  fine            Fine?           @relation("BorrowingToFine")
}

enum DamageLevel {
  SMALL
  LARGE
  NONE
}

model Fine {
  id              String            @id @default(uuid())
  borrowingId     String            @unique
  totalAmount     Float
  missingBook     Boolean           @default(false)
  lateDays        Int               @default(0)
  damageLevel     DamageLevel?
  createdAt       DateTime          @default(now())
  borrowing       Borrowing         @relation("BorrowingToFine", fields: [borrowingId], references: [id])
}